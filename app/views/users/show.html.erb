<div class="wrapper", style="background-color: white">
  <div class="container">
    <div class="tabs">
      <a class="tab active" href="#">
        <h3>My Dashboard</h3>
      </a>
      <a class="tab" href="#">
        <h3>My Historic</h3>
      </a>
    </div>
    <div class="progress">
      <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 15%" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100"></div>
      <div class="progress-bar bg-success progress-bar-striped" role="progressbar" style="width: 30%" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100"></div>
      <div class="progress-bar bg-info progress-bar-striped" role="progressbar" style="width: 20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    <div class="row cards-dashboard">
      <% current_user.donations.each do |donation| %>
        <div class="col-sm-12 col-md-6 col-lg-3">
          <div class="card-dashboard">
            <div class="card-dashboard-header">
              <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <%= cl_image_tag(donation.charity.photo[2], :height=>150, :crop=>"scale", class: "dashboard-img, d-block w-100", src:"...", alt:"First slide") %>
                  </div>
                  <div class="carousel-item">
                    <%= cl_image_tag(donation.charity.photo[1], :height=>150, :crop=>"scale", class: "dashboard-img, d-block w-100", src:"...", alt:"First slide") %>
                  </div>
                  <div class="carousel-item">
                    <%= cl_image_tag(donation.charity.photo[0], :height=>150, :crop=>"scale", class: "dashboard-img, d-block w-100", src:"...", alt:"First slide") %>
                  </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>
            </div>
            <div class="card-dashboard-footer">
              <div class="title">
                <%= donation.charity.name %>
              </div>
              <div class="range-card">
                <div class="value">0</div>
                <input type="range" min="0" max="100" step="5" value="0">
              </div>
              
              <!-- Button trigger modal -->
              <button type="button" class="btn-ghost-2" data-toggle="modal" data-target="#exampleModalCenter">
                Unfollow
              </button>

              <!-- Modal -->
              <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLongTitle">It is the end of a beautiful story </h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      Thank you so much <i class="fas fa-heart" style='color:red;'></i>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                      <%= link_to "Unfollow", user_donation_path(current_user, donation), method: :delete, class: 'btn-ghost-2' %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

