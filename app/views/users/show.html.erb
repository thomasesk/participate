<div class="wrapper", style="background-color: white">
  <div class="container">
    <div class="tabs">
      <a class="tab active" href="#">
        <h3>My Dashboard</h3>
      </a>
      <a class="tab" href="#">
        <h3>My Historic</h3>
      </a>
    </div>
    <div class="progress">
      <% total = 0 %>
      <% color = ["#F1F06E", "#75d8b8", "#2AE6FF", "#FFBF27"]%>
      <% @donations.each_with_index do |donation, index| %>
        <% total += donation.share %>
        <div class="progress-bar progress-bar-striped" role="progressbar" style="background-color: <%= color[index] %>; width: <%= donation.share %>%" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100"></div>
      <% end %>
      <% if total > 100 %>
        <div class="progress-bar bg-danger progress-bar-striped" role="progressbar" style="width: 1000000%" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100"></div>
      <% elsif total == 100 %>
        <div class="progress-bar bg-success progress-bar-striped" role="progressbar" style="width: 1000000%" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100"></div>
      <% end %>
    </div>
    <div class="row cards-dashboard">
      <% @donations.each_with_index do |donation, index| %>
        <div class="col-sm-12 col-md-6 col-lg-3">
          <div class="card-dashboard" style="border-bottom: 20px solid <%= color[index] %>;">
            <div class="card-dashboard-header">
              <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <%= cl_image_tag(donation.charity.photo[2], :height=>150, :crop=>"scale", class: "dashboard-img, d-block w-100", src:"...", alt:"First slide") %>
                  </div>
                  <div class="carousel-item">
                    <%= cl_image_tag(donation.charity.photo[1], :height=>150, :crop=>"scale", class: "dashboard-img, d-block w-100", src:"...", alt:"First slide") %>
                  </div>
                  <div class="carousel-item">
                    <%= cl_image_tag(donation.charity.photo[0], :height=>150, :crop=>"scale", class: "dashboard-img, d-block w-100", src:"...", alt:"First slide") %>
                  </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>
            </div>
            <div class="card-dashboard-footer">
              <div class="title">
                <%= link_to donation.charity.name, charity_path(donation.charity), class: "title" %>
              </div>
              <div>
                <%= simple_form_for [@user, donation] do |f| %>
                  <div class="value" id="value-<%= donation.id %>" style="margin-left: 13px"><%= donation.share %></div>
                  <%= f.input :share, :as => "range", label: false, input_html: { min:"0", max: (100 - total + donation.share), step:"5", data: {donation: donation.id } } %>
                  <div class="form-btns">
                    <%= f.button :submit, "Update", class: "btn-form-user" %>
                    <%= link_to "X", user_path(current_user), class: 'btn btn-danger' %>
                  </div>
                <% end %>
              </div>

              <!-- Button trigger modal -->
              <button type="button" class="btn-card-user" data-toggle="modal" data-target="#modal-<%= donation.id %>">
                Unfollow
              </button>

              <!-- Modal -->
              <div class="modal fade" id="modal-<%= donation.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLongTitle">It is the end of a beautiful story </h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      Thank you so much <i class="fas fa-heart" style='color:red;'></i>
                    </div>
                    <div class="modal-footer">
                      <%= link_to "Unfollow", user_donation_path(current_user, donation), method: :delete %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

